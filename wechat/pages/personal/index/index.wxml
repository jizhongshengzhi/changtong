            <navigator class="content" hover-class="none">
                <text class="icon-favor text-blue"></text>
                <text class="text-grey">预留字段2</text>
            </navigator>
        </view>
        <view class="cu-item arrow">
            <navigator class="content" hover-class="none">
                <text class="icon-formfill text-green"></text>
